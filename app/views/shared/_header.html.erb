<header>
  <nav class='bg-gray-100 shadow-sm'>
    <div class='container mx-auto px-4'>
      <div class='flex items-center justify-between h-16'>
        <!-- ロゴ -->
        <%= link_to '/', class: 'flex items-center' do %>
          <%= image_tag 'logo.png', class: 'h-15' %>
        <% end %>

        <!-- ハンバーガーメニューボタン（モバイル） -->
        <button class='lg:hidden p-2 rounded-md hover:bg-gray-200' data-action='click->menu#toggle'>
          <svg class='w-6 h-6' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
            <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M4 6h16M4 12h16M4 18h16'></path>
          </svg>
        </button>

        <!-- デスクトップメニュー -->
        <div class='hidden lg:flex lg:items-center lg:space-x-6'>
          <ul class='flex items-center space-x-6'>
            <!-- 掲示板ドロップダウン -->
            <li class='relative group'>
              <%= link_to '掲示板', '#', class: 'flex items-center space-x-1 text-gray-700 hover:text-gray-900', id: 'header-board-menu' %>
              <div class='absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10'>
                <%= link_to '掲示板一覧', '#', class: 'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100' %>
                <%= link_to '掲示板作成', '#', class: 'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100' %>
              </div>
            </li>

            <!-- ブックマーク一覧 -->
            <li>
              <%= link_to 'ブックマーク一覧', '#', class: 'text-gray-700 hover:text-gray-900' %>
            </li>

            <!-- プロフィールドロップダウン -->
            <li class='relative group'>
              <%= link_to '#', class: 'flex items-center', id: 'header-profile' do %>
                <%= image_tag 'sample.jpg', class: 'rounded-full', width: '40', height: '40' %>
              <% end %>
              <div class='absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10'>
                <div class='px-4 py-2 text-sm text-gray-700 border-b'>らんてっく たろう</div>
                <%= link_to 'プロフィール', '#', class: 'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100' %>
                <%= link_to 'ログアウト', '#', class: 'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100' %>
              </div>
            </li>
          </ul>
        </div>
      </div>

      <!-- モバイルメニュー -->
      <div class='lg:hidden hidden' data-menu-target='content'>
        <div class='px-2 pt-2 pb-3 space-y-1'>
          <div class='space-y-1'>
            <div class='text-gray-700 px-3 py-2 font-medium'>掲示板</div>
            <%= link_to '掲示板一覧', '#', class: 'block px-6 py-2 text-sm text-gray-600 hover:bg-gray-100' %>
            <%= link_to '掲示板作成', '#', class: 'block px-6 py-2 text-sm text-gray-600 hover:bg-gray-100' %>
          </div>
          <%= link_to 'ブックマーク一覧', '#', class: 'block px-3 py-2 text-gray-700 hover:bg-gray-100' %>
          <div class='border-t pt-2'>
            <div class='px-3 py-2 text-sm text-gray-700'>らんてっく たろう</div>
            <%= link_to 'プロフィール', '#', class: 'block px-3 py-2 text-gray-700 hover:bg-gray-100' %>
            <%= link_to 'ログアウト', '#', class: 'block px-3 py-2 text-gray-700 hover:bg-gray-100' %>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>